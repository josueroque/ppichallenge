@page "/"
@using Blazored.FluentValidation;

<EditForm model ="@candidateModel">
    <FluentValidationValidator @ref="_fluentValidationValidator" Validator="Validator" />

    <div class="container container-fluid">
        <h2>Save Candidate</h2>
        <div class="row">
            <div class="mt-3 col-4">
                <label>First Name</label>
                <InputText @bind-Value="candidateModel.FirstName" class="form-control"></InputText>
                <ValidationMessage For="@(() => candidateModel.FirstName)" />
            </div>
            <div class="mt-3 col-4">
                <label>Last Name</label>
                <InputText @bind-Value="candidateModel.LastName" class="form-control"></InputText>
                <ValidationMessage For="@(() => candidateModel.LastName)" />
            </div>
            <div class="mt-3 col-4">
                <label>Email Address</label>
                <InputText @bind-Value="candidateModel.EmailAdress" class="form-control"></InputText>
            </div>
            <div class="mt-3 col-4">
                <label>Phone Number</label>
                <InputText @bind-Value="candidateModel.PhoneNumber" class="form-control"></InputText>
            </div>
            <div class="mt-3 col-4">
                <label>Residencial Zip Code</label>
                <InputText @bind-Value="candidateModel.ZipCode" class="form-control"></InputText>
            </div>
        </div>

        <div class="d-grid gap-2 d-md-flex justify-content-center">
            <button class="btn btn-primary" type="submit">Save</button>
        </div>
    </div>
</EditForm>